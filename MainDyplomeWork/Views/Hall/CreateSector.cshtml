@model HallSector

@{
    ViewData["Title"] = "CreateSector";
}

<div class="logForm main-container">
        <form asp-action="CreateSector">
            <h4>Create Hall Sector</h4>
            <input type="hidden" asp-for="HallId" value="@Model.HallId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SectorName" class="control-label"></label>
                <input asp-for="SectorName" class="form-control" />
                <span asp-validation-for="SectorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Details" asp-route-id="@Model.HallId">Back to List</a>
            </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
