@model IEnumerable<Director>

@{
    ViewData["Title"] = "Index";
}
<div class="main-container">
    <div class="row table-fix">
        <h1>Directors List</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BirthPlace)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkExperience)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MovieNumber)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) 
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BirthPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkExperience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MovieNumber)
                            </td>
                            <td class="field-fix">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
