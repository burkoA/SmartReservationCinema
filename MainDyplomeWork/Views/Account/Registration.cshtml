@model SmartReservationCinema.Models.RegistrationModel;
@{
}
    <div class="logForm container">
      <form asp-action="Registration" method="post">
        <h2>Registration Form</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Email">Email *</label>
        <input type="email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password">Password *</label>
        <input type="password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="PasswordRepeat">Repeat password *</label>
        <input type="password" asp-for="PasswordRepeat">
        <span asp-validation-for="PasswordRepeat" class="text-danger"></span>

        <label asp-for="FirstName">First Name *</label>
        <input type="text" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <label asp-for="LastName">Surname</label>
        <input type="text" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>

        <label asp-for="City"></label>
        <input type="text" asp-for="City">
        <span asp-validation-for="City" class="text-danger"></span>

        <label asp-for="Address"></label>
        <input type="text" asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>

        <label asp-for="Age"></label>
        <input type="text" asp-for="Age">
        <span asp-validation-for="Age" class="text-danger"></span>
        <br/>
        <div class="regst">
            <button type="submit">Register</button>
            <p class="leftSight">Already have an account? <a asp-action="Login">Login</a></p> 
        </div>

      </form>
    </div>