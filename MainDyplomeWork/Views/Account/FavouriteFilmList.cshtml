@model IEnumerable<SmartReservationCinema.FilmContext.FavouriteFilm>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="user-profile logForm">
    @Html.Partial("ProfileMenu")
    <div class="user-details">
        <table class="table table-striped table-bordered">
            <h2 style="margin-top: 100px;">My Favorite Films</h2>
            <thead class="thead-dark">
                <tr>
                    <td>Film Name</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach(SmartReservationCinema.FilmContext.FavouriteFilm favFilm in Model)
                {
                    <tr>
                        <td>@favFilm.Film.FilmName</td>
                        <td><a asp-action="DeleteFavoriteFilm" asp-route-id="@favFilm.Id">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>