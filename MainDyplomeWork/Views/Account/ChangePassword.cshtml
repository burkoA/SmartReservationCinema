@model SmartReservationCinema.Models.ChangePasswordModel
@{
}

<div class="user-profile logForm">
        @Html.Partial("ProfileMenu")
        <div class="user-details">
          <form asp-action="ChangePassword">
          <h1>Change Password</h1>
          <table>
            <tr>
              <th>Old Password</th>
              <td>
                  <input type="password" asp-for="OldPassword" />
                  <span asp-validation-for="OldPassword" class="text-danger"></span>
              </td>
            </tr>
            <tr>
              <th>New Password</th>
              <td>
                  <input type="password" asp-for="NewPassword" />
                  <span asp-validation-for="NewPassword" class="text-danger"></span>
              </td>
            </tr>
            <tr>
              <th>Repeat Password</th>
              <td>
                  <input type="password" asp-for="RepeatPassword" />
                  <span asp-validation-for="RepeatPassword" class="text-danger"></span>
              </td>
            </tr>
          </table>
          <br />
          <button type="submit">Confirm</button>
          </form>
        </div>
    </div>